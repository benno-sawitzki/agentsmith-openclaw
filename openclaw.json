{
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "port": "${PORT:-8080}",
    "auth": {
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "controlUi": {
      "enabled": true,
      "allowInsecureAuth": true
    },
    "http": {
      "endpoints": {
        "chatCompletions": { "enabled": true }
      }
    }
  },
  "channels": {
    "telegram": {
      "enabled": "${TELEGRAM_ENABLED:-false}",
      "botToken": "${TELEGRAM_BOT_TOKEN}"
    },
    "whatsapp": {
      "dmPolicy": "${WHATSAPP_DM_POLICY:-disabled}"
    }
  }
}
